@model CategoryViewModel
<h2>Edit Product</h2>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-action="Edit">
            <p class="text-danger">

                @ViewBag.AlredyExistError
            </p>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" type="submit" value="Edit" class="btn btn-danger" />

            </div>
        </form>
    </div>
</div>
