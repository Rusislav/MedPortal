@model  AddProductViewModel

@{

    var ID = ViewBag.ID;

}
<h2>Edit Product</h2>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-action="Edit">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image Url</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Prescription)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.Prescription)
                @Html.ValidationMessageFor(model => model.Prescription)
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ManifactureId" class="form-label">Manifacturer</label>
                <select asp-for="@Model.ManifactureId" class="form-control">
                    @foreach (var man in Model.Manufacturers)
                    {
                        <option value="@man.Id">@man.Name</option>
                    }
                </select>
                <span asp-validation-for="ManifactureId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" type="submit" value="Edit" class="btn btn-danger" />

            </div>
        </form>
    </div>
</div>
